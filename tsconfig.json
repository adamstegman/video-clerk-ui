{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"]
    },
    "types": ["nativewind/types", "jest"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "app/_layout.tsx",
    "app/index.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "app/routes",
    "app/lib",
    "app/components",
    "app/list",
    "app/watch",
    "app/settings",
    "app/marketing",
    "app/tmdb-api",
    "app/test-utils",
    "app/app-data",
    "app/root.tsx",
    "app/routes.ts",
    "app/app.css"
  ]
}
